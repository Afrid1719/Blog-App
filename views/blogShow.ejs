<%- include('./partials/header') %>
<div class="ui container main text segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p> 
            </div>
        </div>
    </div>
    <a class="ui blue basic button" href="<%= `/blogs/${blog._id}/edit` %>">Edit</a>
    <form action="<%= `/blogs/${blog._id}?_method=DELETE` %>" method="post" id="delete">
        <button class="ui red basic button" type="submit">Delete</button>
    </form>
</div>
<%- include('./partials/footer') %>